.search
  display block
  margin auto

  .indexContent
    margin-bottom 10px
    border none
    padding 0 10px 10px
    clear both
    box-shadow none

    &:not(:first-of-type)
      margin-top 0

    .controlPanel
      height initial
      background transparent

      p
        float left
        padding 17px 20px
        margin 0
        font-weight 100
        color darken($grey,30%)
        transition color $time ease-in-out
        font-size .8em

      .postCount.search
        float right
        background $secondaryBlue
        font-weight 500
        padding 2px 4px
        color $white
        margin 13px 20px
        border-radius $radius

    .postEntryList
      max-height 70vh
      overflow-y scroll
      border-radius 2*$radius
      max-width 600px
      border 15px solid white

      &:hover
        li
          opacity 1

      .phrase
        &:hover
          h2.title
            background white

        .info
          section
            padding-bottom 0

            h2.title
              font-size 1.3em
              font-weight 500
              margin 0
              color $darkBlue
              transition background 2*$time ease-in-out

        ul
          float none
          margin auto
          display table
          list-style-type none
          padding 0
          width 100%

          li
            width 100%
            float left

            &.entry
              border-top none
              padding 1em 0

              ul
                li
                  .video
                    min-height initial
                    width 30%
                    video
                      min-height initial

            p
              width initial
              display inline-block
              margin 0
              padding .7em 1em
              position relative
              z-index 1
              font-size 1.2em
              max-width 90%
              overflow hidden
              text-overflow ellipsis
              border-style solid
              outline none
              white-space initial

            &.source
              p
                border-width 1px
                margin 2px 2px 4px 2px
                border-radius 31px 31px 31px 0
                float left

              p
                background $source
                border 1px solid darken($source, 2%)
                margin 2px 2px 6px 2px

            &.target
              p
                border-width 1px
                border-radius 31px 31px 0 31px
                margin 2px
                float right

              p
                background $target
                border 1px solid darken($target, 2%)
                margin 2px
