doctype
html
  head
    meta(charset="utf-8")
    meta(name="viewport", content="width=device-width, initial-scale=1, user-scalable=no")
    title BD-Market
    link(rel="stylesheet", href="/lib/bootstrap.min.css")
    link(rel="stylesheet", href="/custom.css")
  body
    .container.cart
      .row
        .col-sm-12
          h2.centered.translate Checkout
          h4.centered.translate BD-Market
          h4.centered
            span.translate test market for farmers' products
            br
            br
            if user
              a.btn.btn-default.btn-lg.translate(href="/logout") Log Out
            else
              a.btn.btn-default.btn-lg.translate(href="/login") Log In
            hr

      for order in orders
        .row
          .col-sm-3
            .well.centered
              img(src="#{order.item.img || '//placehold.it/200x150'}")
              strong.quantity= order.quantity
              br
              a(href="/item/#{order.item.id}") See Item Details
          .col-sm-9
            h3= order.item.name
            span.translate from
            span &nbsp;
            span.farmer-name= order.farmer
        hr
    script(src="/translations.js")
