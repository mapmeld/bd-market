doctype
html
  head
    meta(charset="utf-8")
    meta(name="viewport", content="width=device-width, initial-scale=1, user-scalable=no")
    title BD-Market: Registration
    link(rel="stylesheet", href="/lib/bootstrap.min.css")
    link(rel="stylesheet", href="/custom.css")
  body
    .container
      .row
        .col-sm-12
          h2.centered.translate BD-Market
          h4.centered.translate test market for farmers' products
      .row
        .col-sm-6
          form.form.well(action="/register", method="POST")
            input(type="hidden", name="_csrf", value=csrfToken)
            .form-group
              label.translate Username
              input.form-control.input-lg(name="user_id", required)
            .form-group
              label.translate Password
              input.form-control.input-lg(name="password", required)
            .form-group
              label.translate Name
              input.form-control.input-lg(name="name", required)
            .form-group
              label.translate E-mail
              input.form-control.input-lg(type="email", name="email", required)
            .form-group
              label.translate Preferred Language (type one)
              input.form-control(name="preferLanguage")
            .form-group
              label.translate Role
              select(name="role")
                option.translate(value="customer") Customer
                option.translate(value="farmer") Farmer
                option.translate(value="manager") Manager
            input.btn.btn-success.translate(type="submit", value="Create User")
            
        .col-sm-6
          h4 What is this?
          p This is an experimental project...

    script(src="/translations.js")