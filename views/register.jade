doctype
html
  head
    meta(charset="utf-8")
    meta(name="viewport", content="width=device-width, initial-scale=1, user-scalable=no")
    title BD-Market: Registration
    link(rel="stylesheet", href="/lib/bootstrap.min.css")
    link(rel="stylesheet", href="/custom.css")
  body
    .container
      .row
        .col-sm-12
          h2.centered BD-Market
          h4.centered Marketplace
      .row
        .col-sm-6
          form.form.well(action="/register", method="POST")
            input(type="hidden", name="_csrf", value=csrfToken)
            .form-group
              label Username
              input.form-control.input-lg(name="user_id", required)
            .form-group
              label Password
              input.form-control.input-lg(name="password", required)
            .form-group
              label Name
              input.form-control.input-lg(name="name", required)
            .form-group
              label E-mail
              input.form-control.input-lg(type="email", name="email", required)
            .form-group
              label Preferred Language (type one)
              input.form-control(name="preferLanguage")
            .form-group
              label Role
              select(name="role")
                option(value="customer") customer
                option(value="farmer") farmer
                option(value="manager") manager
            input.btn.btn-success(type="submit", value="Create User")
            
        .col-sm-6
          h4 What is this?
          p This is an experimental project...
